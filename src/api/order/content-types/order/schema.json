{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "totalPrice": {
      "type": "float",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "sent",
        "delivered",
        "canceled"
      ],
      "default": "pending",
      "required": true
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "PIX",
        "CREDIT",
        "DEBIT",
        "BOLETO"
      ],
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "approved",
        "pending",
        "declined"
      ]
    },
    "shippingRate": {
      "type": "float",
      "required": false
    },
    "discountValue": {
      "type": "float"
    },
    "orderNotes": {
      "type": "text"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders"
    },
    "zipCode": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "addressNumber": {
      "type": "string"
    },
    "complement": {
      "type": "string"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::seller.seller",
      "inversedBy": "orders"
    },
    "coupon": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::coupon.coupon",
      "inversedBy": "order"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    }
  }
}
