{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "orders"
    },
    "totalPrice": {
      "type": "float",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "sent",
        "delivered",
        "canceled"
      ],
      "default": "pending",
      "required": true
    },
    "shippingAddress": {
      "type": "string",
      "required": true
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "PIX",
        "CREDIT",
        "DEBIT",
        "BOLETO"
      ],
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "approved",
        "pending",
        "declined"
      ]
    },
    "orderDate": {
      "type": "datetime",
      "required": true
    },
    "shippingFee": {
      "type": "float",
      "required": false
    },
    "discountCode": {
      "type": "string"
    },
    "discountValue": {
      "type": "float"
    },
    "orderNotes": {
      "type": "text"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders"
    }
  }
}
